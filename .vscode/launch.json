{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Pytest",
            "type": "debugpy",
            "request": "launch",
            "purpose": [
                "debug-test"
            ],
            "module": "pytest",
            "args": [
                "${file}",
                "--no-cov"
            ],
            "justMyCode": true
        },
        {
            "name": "Python: Debug Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "stopOnEntry": true,
            "justMyCode": false,
        }
    ]
}
